<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>



        <template id="external_layout_header_blank" inherit_id="report.external_layout_header">
            <xpath expr="//div['header']" position="replace" />
        </template>


        <template id="external_layout_footer_blank" inherit_id="report.external_layout_footer">
            <xpath expr="//div['footer']" position="replace">
                <div class="footer" style="padding-bottom:10px; ">
                    <div class="text-center" style="padding-bottom:10px; ">

                         <div class="col-xs-4 pull-right">
                                    <table class="table">
                                        <tr>
                                            <td></td>

                                            <td class="text-right">
                                                <span t-field="o.amount_untaxed" />
                                            </td>
                                        </tr>

                            <t t-foreach="o.tax_line_ids" t-as="t">                        
                                <t t-if="('RETEIVA' != t.name) and ('RETEFUENTE' != t.name) "> 
                                    <tr> 
                                        <td></td>
                                        <td class="text-right">
                                            <span t-field="t.amount"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>







                                        
                                        <tr>
                                            <td></td>
                                            <td class="text-right">
                                                 <span t-field="o.amount_without_wh_tax" />
                                            </td>
                                        </tr>
                                    </table>
                                </div>




                    </div>
                </div>
            </xpath>
        </template>




 <template id="report_invoice_document_roblan_colombia" inherit_id="account.report_invoice_document">
        <xpath expr="//div['page']" position="replace">
        <div class="page" style="padding-top:39px; ">
            <div class="row">

                <div class="col-xs-12" style="border: 4px;">

                    <div class="col-xs-3">
                    </div>
                    <div class="col-xs-3">
                    </div>
                    <div class="col-xs-6">
                        <span t-field="o.partner_id.name"/> 
                        <span t-if="o.partner_id.companyBrandName"> / <span t-field="o.partner_id.companyBrandName"/></span>
                    </div>

                </div>

                <div class="col-xs-12" style="border: 4px;">

                    <div class="col-xs-3">
                    </div>
                    <div class="col-xs-3">
                    </div>
                    <div class="col-xs-6">
                        <span t-if="o.partner_id.formatedNit"> NIT: <span t-field="o.partner_id.formatedNit"/></span>
                    </div>

                </div>

                <div class="col-xs-12" style="border: 4px;">

                    <div class="col-xs-3">
                    </div>
                    <div class="col-xs-3">
                    </div>
                    <div class="col-xs-6">
                        <span t-if="o.partner_id.xidentification and not o.partner_id.formatedNit"> NIT: <span t-field="o.partner_id.xidentification"/></span>
                    </div>

                </div>




                <div class="col-xs-12" >


                    <div class="col-xs-3">
                    </div>
                    <div class="col-xs-3">
                        
                    </div>
                    <div class="col-xs-6">
                         <span t-if="o.partner_id.street"><span t-field="o.partner_id.street"/></span>
                    </div>


                </div>
                <div class="col-xs-12" style="min-height:32px;">

                    <div class="col-xs-3">
                    </div>
                    <div class="col-xs-3">
                        <span t-field="o.date_invoice"/>
                    </div>
                    <div class="col-xs-6">
                        <span t-if="o.partner_id.xcity"><span t-field="o.partner_id.xcity"/></span>
                        <span t-if="o.partner_id.state_id">/<span t-field="o.partner_id.state_id"/></span>
                       
                    </div>

                </div>
                <div class="col-xs-12" style="min-height:32px;">

                    <div class="col-xs-3" >
                    </div>
                    <div class="col-xs-3">
                        <span t-field="o.name"/>
                    </div>
                    <div class="col-xs-6">
                          
                    </div>

                </div>
                <div class="col-xs-12" style="min-height:32px;">


                    <div class="col-xs-3">
                    </div>
                    <div class="col-xs-3">
                        <span t-field="o.date_due"/>
                    </div>
                    <div class="col-xs-6">
                        
                    </div>

            
                </div>
                
            </div>



            <div class="row" style="padding-top:90px; min-height:570px; max-height:570px; font-size:13px;">
                    <!-- Is there a discount on at least one line? -->
                    <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                    <table class="table">
                        <tbody class="invoice_tbody">
                            <tr t-foreach="o.invoice_line_ids" t-as="l">

                                
                                <td><span t-field="l.product_id.default_code"/></td>
                                <td><span t-esc="l.product_id.name[:70]"/></td>
                                
                                <td class="text-left">
                                    <span t-field="l.quantity"/>
                                    <span t-field="l.uom_id"  groups="product.group_uom"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="l.price_unit"/>
                                </td>
                                <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                    <span t-field="l.discount"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.price_subtotal" 
                                        t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

            </div>


                <div class="col-xs-8 pull-left">
                    <table class="table table-condensed">
                        <tr> 
                            <td>NUEVA DIRECCION COMERCIAL:</td>
                            <td>CARRERA 7 #15-24 OF. 01</td>
                        </tr>
                        <tr> 
                            <td></td>
                            <td>CENTRO DE NEGOCIOS</td>
                        </tr>
                        <tr> 
                            <td></td>
                            <td>PUNTO EMPRESARIAL DEL EJE</td>
                        </tr>
                        <t t-if="o.remision_number"> 
                            <tr><td> REMISION DE ENTREGA:</td>
                                <td><span t-field="o.remision_number"/></td>
                            </tr>
                        </t>
                    </table>
                </div>

            <div class="row" t-if="o.tax_line_ids">
                 <div class="col-xs-4 pull-right">
                    <table class="table table-condensed">

                        <tbody>

                          <t t-foreach="o.tax_line_ids" t-as="t">                        
                                <t t-if="('RETEIVA' == t.name) or ('RETEFUENTE' == t.name) "> 
                                    <tr> 
                                        <td><span t-field="t.name"/></td>

                                        <td class="text-right">
                                            <span t-field="t.amount"
                                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                        </td>
                                    </tr>
                                </t>

                            </t>                               
                        </tbody>
                    </table>
                </div>
            </div>
</div>


      

   





 </xpath>
</template>




 
        <record id="paperformat_inv" model="report.paperformat">
            <field name="name">Invoice Portrait</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">280</field>
            <field name="page_width">216</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">38</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>


        <record id="account.account_invoices" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="l10n_co_tax_extension.paperformat_inv" />
        </record>








</data>
</openerp>